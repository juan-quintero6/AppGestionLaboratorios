<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservaDetailActivity">

    <TextView
        android:id="@+id/lab_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Nombre del laboratorio"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/date_reserva_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lab_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Fecha de reserva"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnEliminarReserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_reserva_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Eliminar Reserva" />
</RelativeLayout>
