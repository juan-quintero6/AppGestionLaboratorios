<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center"
    tools:context=".MainActivityUsuario">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:src="@drawable/img_upc"
        android:padding="30dp"/>

    <TextView
        android:id="@+id/textTituloMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="MENU"
        android:textSize="20sp"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/btnGenerarReserva"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:text="Generar reserva"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:textSize="22sp"
        android:onClick="btnGenerar_Reserva"/>

    <Button
        android:id="@+id/btnConsultarReserva"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:onClick="onClick"
        android:text="Mis reservas"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/btnDisponibilidad"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:onClick="onClick"
        android:text="Disponibilidad"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/btnMaterial"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:onClick="onClick"
        android:text="Material"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:onClick="onClick"
        android:text="Salir"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:textSize="22sp"/>

</LinearLayout>